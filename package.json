{
  "name": "hikkaku-workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "docs:dev": "bun --cwd docs dev",
    "docs:build": "turbo run docs:build",
    "docs:preview": "bun --cwd docs preview",
    "lint": "biome check",
    "fmt": "biome check --fix --unsafe",
    "typecheck": "turbo run typecheck",
    "ref:build": "bun run --cwd packages/skill build-blocks",
    "ref:check": "bun run --cwd packages/skill build-blocks:check",
    "build": "turbo run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.9",
    "@types/bun": "latest"
  },
  "packageManager": "bun@1.3.9",
  "module": "index.ts",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  },
  "overrides": {
    "vite": "8.0.0-beta.13"
  }
}
